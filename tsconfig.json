{
	"extends": "@thundercraft5/tsconfig/node18-decl.tsconfig.json",
	"compilerOptions": {
		"incremental": true,
		"module": "esnext",
		"declarationDir": ".",
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"@thundercraft5/type-utils": [
				"./src/index"
			],
			"@thundercraft5/type-utils/arrays": [
				"./src/arrays/index",
			],
			"@thundercraft5/type-utils/objects": [
				"./src/objects/index",
			],
			"@thundercraft5/type-utils/strings": [
				"./src/strings/index",
			],
			"@thundercraft5/type-utils/numbers": [
				"./src/numbers/index",
			],
			"@thundercraft5/type-utils/values": [
				"./src/values/index",
			],
			"@thundercraft5/type-utils/general": [
				"./src/general/index",
			],
			"@thundercraft5/type-utils/functions": [
				"./src/functions/index",
			],
			"@thundercraft5/type-utils/constructors": [
				"./src/constructors/index",
			]
		}
	},
	"include": [
		"src/**/*.ts",
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}